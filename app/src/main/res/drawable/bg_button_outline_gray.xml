<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- background -->
            <solid android:color="@color/background.transparent" />

            <size android:width="48dp" android:height="48dp" />

            <stroke android:width="1dp" android:color="@color/black_800" />

            <!-- corner roundness -->
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:radius="40dp" android:topLeftRadius="8dp" android:topRightRadius="8dp" />
        </shape>
    </item>
</selector>